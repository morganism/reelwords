<!-- views/layout.erb -->

<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your App Title</title>
  <link rel="manifest" href="/manifest.json">
  <style>
    #tileStorage
    {
      margin-top: 1em;
      margin-right: auto;
      margin-left: auto;
      text-align: center;
    }

    #tileStorage a.on:hover
    {
      border-top-color: #66CC66;
      border-right-color: #006600;
      border-bottom-color: #006600;
      border-left-color: #66CC66;
      background-color: #009600;
      color: #FFFFFF;
    }

    #tileStorage input
    {
      width: 10em;
    }


    #tileStorage td.tileStore
    {
      margin: 0;
      border-top: 0.08em solid #999999;
      border-right: 0.08em solid #EEEEEE;
      border-bottom: 0.08em solid #EEEEEE;
      border-left: 0.08em solid #999999;
      vertical-align: middle;
    }

    #tileStorage .empty
    {
      border: 0.15em solid #CCCCCC;
      background-color: #CCCCCC;
    }

    #tileStorage td a.empty:hover
    {
      border-color: #FFFFFF;
      background-color: #FFFFFF;
    }

    #tileStorage .tile:hover
    {
      border-top-color: #FFCC66;
      border-right-color: #CC6600;
      border-bottom-color: #CC6600;
      border-left-color: #FFCC66;
      background-color: #FF9900;
      color: #FFFFFF;
    }

    #tileStorage .hidden
    {
      visibility: hidden;
    }

    .tile
    {
      display: block;
      float: left;
      width: 5em;
      height: 5em;
      margin: 0;
      border: 0.15em solid #999966;
      border-top: 0.15em solid #FFFFCC;
      border-left: 0.15em solid #FFFFCC;
      background-color: #CCCC99;
      color: #000000;
      text-align: center;
      line-height: 5em;
      font-weight: bold;
      text-decoration: none;
    }

    .letter
    {
      font-size: 40px;
    }
    .tile .score
    {
      font-size: 0.8em;
      vertical-align: sub;
      color: #880000
    }

    .tile .blank
    {
      color: #999999;
    }
  </style>
  <script>
    window.onload = function() {
        // Attach click event listeners to all 'tile' spans
        var tiles = document.querySelectorAll('.tile');
        tiles.forEach(function(tile) {
            tile.onclick = function(event) {
                var letter = tile.querySelector('.letter').textContent; // Get the letter
                var input = document.getElementById('letters');
                input.value += letter; // Append the letter to the input field
                tile.style.pointerEvents = 'none'; // Disable further clicks on this tile
                tile.style.opacity = '0.5'; // Optional: Change the style to indicate it's disabled
            };
        });
    };
    // Function to convert input to lowercase
    function enforceLowercaseInput(event) {
        const inputElement = event.target;
        inputElement.value = inputElement.value.toLowerCase();
    }
  </script>
</head>
<body>
  <%= yield %>

  <script>
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/sw.js')
          .then(registration => {
            console.log('Service Worker registered:', registration);
          })
          .catch(error => {
            console.error('Service Worker registration failed:', error);
          });
      });
    }
  </script>
</body>
</html>
